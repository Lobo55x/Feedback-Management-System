{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@feedbackly/utils": ["../utils"],
      "@feedbackly/ui": ["../ui"]
    }
  },
  "include": ["../../apps/*/src", "../../packages/*/src"],
  "exclude": ["node_modules", "dist"]
}